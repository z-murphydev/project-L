  "main": "dist/server/proxy/index.js",
  "scripts": {
    "build": "concurrently \"npm:build:*\"",
    "build:browser": "cross-env NODE_ENV=production webpack --config=\"webpack.config.prod.js\"",
    "build:server": "tsc --project tsconfig.server.json",
    "clean": "rimraf dist",
    "commit-lint": "npx --no-install commitlint --config ./.commitlintrc.json --edit",
    "husky:commit-msg": "npm run commit-lint",
    "husky:pre-commit": "npm run lint-staged",
    "husky:pre-push": "npm run test",
    "lint-staged": "npx --no-install lint-staged --concurrent false --config ./.lintstagedrc.json",
    "lint-staged:lint": "eslint --fix",
    "lint-staged:package-json": "sort-package-json",
    "lint-staged:prettier": "prettier --write",
    "lint-staged:sortier": "sortier",
    "lint-staged:stylelint": "stylelint --config ./.stylelintrc.json",
    "lint-staged:test": "jest --findRelatedTests",
    "prepare": "npm run clean && npm run build",
    "start": "npm run clean && npm run build:server && concurrently \"npm:watch:server\" \"npm:start:server\" \"npm:watch:browser\"",
    "start:server": "concurrently \"npm:start:server:*\"",
    "start:server:api": "nodemon -r dotenv/config ./dist/server/api/index.js",
    "start:server:proxy": "nodemon -r dotenv/config ./dist/server/proxy/index.js",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "watch:browser": "webpack serve --config=\"webpack.config.dev.js\"",
    "watch:server": "npm run build:server -- --incremental --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@mikro-orm/cli": "5.1.2",
    "@mikro-orm/core": "5.1.2",
    "@mikro-orm/nestjs": "5.0.1",
    "@mikro-orm/postgresql": "5.1.2",
    "@nestjs/common": "8.4.4",
    "@nestjs/core": "8.4.4",
    "@nestjs/platform-express": "8.4.4",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "7.0.2",
    "@types/eslint": "8.4.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.44",
    "@types/react-dom": "17.0.15",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "autoprefixer": "10.4.4",
    "classnames": "2.3.1",
    "commitlint": "16.2.3",
    "concurrently": "7.1.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.1",
    "cssnano": "5.1.7",
    "dotenv": "16.0.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-unicorn": "42.0.0",
    "express": "4.17.3",
    "html-webpack-plugin": "5.5.0",
    "http-proxy-middleware": "2.0.6",
    "husky": "7.0.4",
    "informed": "4.9.3",
    "jest": "27.5.1",
    "lint-staged": "12.3.8",
    "mini-css-extract-plugin": "2.6.0",
    "nodemon": "2.0.15",
    "postcss": "8.4.12",
    "postcss-loader": "6.2.1",
    "postcss-nesting": "10.1.4",
    "postgres": "3.0.5",
    "prettier": "2.6.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.3.0",
    "reflect-metadata": "0.1.13",
    "sort-package-json": "1.55.0",
    "sortier": "1.0.1",
    "source-map-loader": "3.0.1",
    "style-loader": "3.3.1",
    "stylelint": "14.7.1",
    "stylelint-config-recommended": "7.0.0",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "typescript": "4.6.3",
    "webpack": "5.72.0",
